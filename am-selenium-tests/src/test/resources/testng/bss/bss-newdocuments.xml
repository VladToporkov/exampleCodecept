<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="newdocuments" verbose="10" parallel="tests" thread-count="20">

    <listeners>
        <listener class-name="com.actionmedia.autotest.listeners.StartPagesMailSenderListener"/>
        <listener class-name="com.actionmedia.autotest.listeners.CuantoListener"/>
    </listeners>

    <test name="tests.1.firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.actionmedia.tests.functional.bss.content.newdocuments.BSS_KU_VerifyNewDocuments"/>
        </classes>
    </test>

    <test name="tests.2.firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.actionmedia.tests.functional.bss.content.newdocuments.BSS_BU_VerifyNewDocuments"/>
        </classes>
    </test>

    <test name="tests.3.firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.actionmedia.tests.functional.bss.content.newdocuments.BSS_USN_VerifyNewDocuments"/>
        </classes>
    </test>

    <test name="tests.4.firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.actionmedia.tests.functional.bss.content.newdocuments.BSS_VIP_VerifyNewDocuments"/>
        </classes>
    </test>

</suite>
