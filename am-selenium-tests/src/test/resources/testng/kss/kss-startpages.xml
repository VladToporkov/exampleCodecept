<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="startpages" verbose="10" parallel="tests" thread-count="20">

    <listeners>
        <listener class-name="com.actionmedia.autotest.listeners.StartPagesMailSenderListener"/>
        <listener class-name="com.actionmedia.autotest.listeners.CuantoListener"/>
    </listeners>

    <test name="tests.1.firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.actionmedia.tests.functional.kss.content.startpages.KSS_BU_VerifyStartPages"/>
        </classes>
    </test>

    <test name="tests.2.firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.actionmedia.tests.functional.kss.content.startpages.KSS_KU_VerifyStartPages"/>
        </classes>
    </test>

    <test name="tests.3.firefox" preserve-order="true">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="com.actionmedia.tests.functional.kss.content.startpages.KSS_VIP_VerifyStartPages"/>
        </classes>
    </test>

</suite>
